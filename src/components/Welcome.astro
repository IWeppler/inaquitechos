---
import Layout from "../layouts/Layout.astro";
import { Award } from "lucide-astro";
import ProductCard from "../components/ProductCard.astro";
import tilcorwelcome from "../assets/tilcorwelcome.webp";
import tilcobanner2 from "../assets/tilcobanner2.webp";
import veronabanner2 from "../assets/veronabanner2.webp";
import ikobanner from "../assets/ikobanner2.webp";
import { Image } from "astro:assets";
import Button from "./ui/button/button.astro";
import WhyChooseUs from "./WhyChooseUs.astro";

const products = [
  {
    href: "/productos/tilcor",
    imageSrc: tilcorwelcome,
    imageAlt: "Tejas Metálicas TILCOR",
    title: "TILCOR",
    description:
      "Soluciones de acero gravillado de alta gama desde Nueva Zelanda, garantizando durabilidad y una estética superior.",
    overlayColorClass: "bg-brand/80",
  },
  {
    href: "/productos/verona",
    imageSrc: veronabanner2,
    imageAlt: "Tejas Metálicas VERONA",
    title: "VERONA",
    description:
      "Industria Argentina con diseño y tecnología de avanzada para un techo elegante, duradero y adaptado al clima local.",
    overlayColorClass: "bg-brand-red/80",
  },
  {
    href: "/productos/iko",
    imageSrc: ikobanner,
    imageAlt: "Pizarras Asfálticas IKO",
    title: "IKO",
    description:
      "La solución líder en Norteamérica, reconocida por su versatilidad, belleza y cero mantenimiento para todo tipo de proyectos.",
    overlayColorClass: "bg-gray-800/80",
  },
];
---

<Layout
  title="Iñaqui Techos - Soluciones de Alta Tecnología para Techos"
  description="Líderes en la comercialización y distribución de tejas metálicas y pizarras asfálticas de alta calidad. 25 años de experiencia avalan nuestro servicio."
>
  <section
    class="relative h-screen min-h-[600px] overflow-hidden flex items-center justify-center"
  >
    <Image
      src={tilcobanner2}
      alt="Residencia de lujo con un techo moderno y elegante"
      class="absolute inset-0 w-full h-full object-cover z-0"
    />

    <div
      class="absolute inset-0 z-10
             bg-white/50 backdrop-blur-sm
             lg:bg-brand-red lg:backdrop-blur-none lg:w-2/4 lg:origin-top-left lg:skew-x-[-30deg] lg:-ml-20"
    >
    </div>

    <div
      class="relative z-20 w-full h-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-2 items-center"
    >
      <div class="text-white lg:text-left text-center py-10 lg:py-0">
        <div
          class="inline-flex items-center px-4 py-2 rounded-full backdrop-blur-sm border text-sm font-medium mb-8
                 bg-slate-900/10 border-slate-900/20 text-slate-800
                 lg:bg-white/20 lg:border-white/20 lg:text-white"
        >
          <Award class="w-4 h-4 mr-2" />
          Más de 25 años de experiencia
        </div>
        <h1
          class="font-display text-5xl md:text-8xl font-extrabold tracking-tight mb-6 leading-tight
                 text-slate-900
                 lg:text-white"
        >
          SOLUCIONES INNOVADORAS.
        </h1>
        <p
          class="text-lg md:text-xl max-w-xl mx-auto lg:mx-0 mb-10
                 text-slate-700
                 lg:text-slate-100"
        >
          Calidad, durabilidad y diseño en tejas metálicas y pizarras asfálticas
          de las mejores marcas del mundo.
        </p>

        <div class="fade-in-on-scroll">
          <Button
            href="#productos"
            text="Ver Productos"
            arrowDirection="left"
          />
        </div>
      </div>

      <div class="hidden lg:block h-full relative"></div>
    </div>
  </section>

  <!-- Products Section -->
  <section id="productos" class="py-24 bg-white">
    <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 fade-in-on-scroll">
        <h2 class="font-display text-3xl font-bold text-gray-900 sm:text-5xl">
          Nuestras Líneas de Productos
        </h2>
        <p class="mt-4 text-lg text-gray-600">
          Comercializamos en forma exclusiva productos con trayectoria
          internacional y calidad probada.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          products.map((product) => (
            <div class="fade-in-on-scroll">
              <ProductCard
                href={product.href}
                imageSrc={product.imageSrc}
                imageAlt={product.imageAlt}
                title={product.title}
                description={product.description}
                overlayColorClass={product.overlayColorClass}
              />
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <WhyChooseUs />

  {/* --- SECCIÓN DE CLIENTES --- */}
  <section class="bg-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="fade-in-on-scroll text-center">
        <h2 class="font-display text-3xl font-bold text-gray-900 sm:text-5xl">
          Confían en Nosotros
        </h2>
        <p
          class="fade-in-on-scroll mt-4 max-w-2xl mx-auto text-lg text-gray-600"
        >
          Grandes empresas, cadenas de hoteles y constructoras de renombre
          eligen nuestras soluciones para sus proyectos más importantes.
        </p>
      </div>

      {/* Contenedor de Logos */}
      <div class="mt-12 flow-root fade-in-on-scroll">
        <div class="-mt-4 -ml-8 flex flex-wrap justify-center lg:-ml-4">
          <div
            class="mt-4 ml-8 flex flex-shrink-0 flex-grow justify-center lg:ml-4 lg:flex-grow-0"
          >
            <img
              class="h-20 filter grayscale transition duration-300 hover:grayscale-0"
              src="https://placehold.co/200x100/FFFFFF/000000?text=SOFITEL"
              alt="Logo de Hotel Sofitel"
            />
          </div>

          <div
            class="mt-4 ml-8 flex flex-shrink-0 flex-grow justify-center lg:ml-4 lg:flex-grow-0"
          >
            <img
              class="h-20 filter grayscale transition duration-300 hover:grayscale-0"
              src="https://placehold.co/200x100/FFFFFF/000000?text=McDonald’s"
              alt="Logo de McDonald's"
            />
          </div>

          <div
            class="mt-4 ml-8 flex flex-shrink-0 flex-grow justify-center lg:ml-4 lg:flex-grow-0"
          >
            <img
              class="h-20 filter grayscale transition duration-300 hover:grayscale-0"
              src="https://placehold.co/200x100/FFFFFF/000000?text=ESPLENDOR"
              alt="Logo de Hotel Esplendor"
            />
          </div>

          <div
            class="mt-4 ml-8 flex flex-shrink-0 flex-grow justify-center lg:ml-4 lg:flex-grow-0"
          >
            <img
              class="h-20 filter grayscale transition duration-300 hover:grayscale-0"
              src="https://placehold.co/200x100/FFFFFF/000000?text=Stieglitz"
              alt="Logo de Constructora Stieglitz"
            />
          </div>

          <div
            class="mt-4 ml-8 flex flex-shrink-0 flex-grow justify-center lg:ml-4 lg:flex-grow-0"
          >
            <img
              class="h-20 filter grayscale transition duration-300 hover:grayscale-0"
              src="https://placehold.co/200x100/FFFFFF/000000?text=SOCMER"
              alt="Logo de Constructora Socmer"
            />
          </div>

          <div
            class="mt-4 ml-8 flex flex-shrink-0 flex-grow justify-center lg:ml-4 lg:flex-grow-0"
          >
            <img
              class="h-20 filter grayscale transition duration-300 hover:grayscale-0"
              src="https://placehold.co/200x100/FFFFFF/000000?text=Golf+Club+Río+Cuarto"
              alt="Logo de Golf Club Río Cuarto"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
